@model IEnumerable<SpiceWithoutAuthentication.Models.MenuItem>
@{
    ViewBag.Title = "Index";
}

<br />
<br />


<div class="border rounded bg-white p-5">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Menu Item List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div class="m-2">
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {

                <div class="container border border-info mx-auto p-2 my-1 bg-white">
                    <div class="row mx-auto">
                        <div class="col-sm-auto my-auto">
                            <img src="data:image;base64,@item.Image" class="img-rounded" style="width : 130px;height: 130px;">
                        </div>
                        <div class="col-sm-9 my-auto">
                            <div class="row">
                                <div class="col-sm-6 text-info">@Html.DisplayFor(m => item.SubCategory.Name)  </div>
                                <div class="col-sm-6 text-right text-danger font-weight-bold">$ @Html.DisplayFor(m => item.Price)</div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm justify-content-center">
                                    @Html.DisplayFor(m => item.Description)
                                </div>
                            </div>
                            <div class="row float-right">
                                <a href="/Menu/Details?id=@item.Id"><button class="btn btn-sm btn-success">Details</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No menu item exists...</p>
        }
    </div>
</div>



@model SpiceWithoutAuthentication.Models.MenuItem
@{
        ViewBag.Title = "Create";
    }

<h2>Create</h2>

<br />
<h2>Create MenuItem</h2>
<br />

<form action="/Menu/Create" method="post" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Description)
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Spicyness)
            <select class="form-control" id="Spicyness" name="Spicyness">
                <option value="None">None</option>
                <option value="NotSpicy">NotSpicy</option>
                <option value="Spicy">Spicy</option>
                <option value="VerySpicy">VerySpicy</option>
            </select>
            @Html.ValidationMessageFor(m => m.Spicyness, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="Image">Item Image</label>
            <input type="file" class="form-control.file" name="Image" />
            @*<input type="submit" id="btnUpload" value="Upload" />*@
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.CategoryId)
            <select class="form-control" id="CategoryId" name="CategoryId">
                <option value="">Select option</option>
                @foreach (var v in ViewBag.Category)
                {
                    <option value="@v.Id">@v.Name</option>
                }
            </select>
            @Html.LabelFor(m => m.SubCategoryId)
            <select class="form-control" id="SubCategoryId" name="SubCategoryId">
                <option value="">Select option</option>
                @foreach (var v in ViewBag.SubCategory)
                {
                    <option value="@v.Id">@v.Name</option>
                }
            </select>

        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Price)
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
        </div>
    </div>
    <button type="submit" class="btn btn-success">Add MenuItem</button>
    <a class="btn btn-dark" href="/Menu/Index">Cancel</a>
</form>





















      

@model IEnumerable<SpiceWithoutAuthentication.Models.MenuItem>
@{
    ViewBag.Title = "CategoryShow";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Menu Item List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                @foreach (var item in Model)
                {
                    <div class="jumbotron my-5 mx-5">
                        <div class="container border border-info mx-auto p-2 bg-white">
                            <div class="row mx-auto">
                                <div class="col-sm-auto my-auto">
                                    <img src="data:image;base64,@item.Image" class="img-rounded" style="width : 130px;height: 130px;">
                                </div>
                                <div class="col-sm-10 my-auto">
                                    <div class="row">
                                        <div class="col-sm-6 text-info">@Html.DisplayFor(m => item.SubCategory.Name)  </div>
                                        <div class="col-sm-6 text-right text-danger font-weight-bold">$ @Html.DisplayFor(m => item.Price)</div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-sm justify-content-center">
                                            @Html.DisplayFor(m => item.Description)
                                        </div>
                                    </div>
                                    <div class="row float-right">
                                        <a href="/Menu/Details?id=@item.Id"><button class="btn btn-sm btn-success">Details</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*<tr>
                            <td>
                            <td ><img src="data:image;base64,@item.Image" width="50" /></td>
                            </td>
                            <td colspan="2">
                                @Html.DisplayFor(m => item.Price)

                                @Html.DisplayFor(m => item.SubCategory.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Description)
                            </td>

                            <td>
                                <partial name="_TableButtonPartial" model="item.Id" />
                            </td>
                        </tr>*@
                }
            </table> }
        else
        {
            <p>No menu item exists...</p>}
    </div>
</div>



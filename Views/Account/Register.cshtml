@model SpiceWithoutAuthentication.Models.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>Register User</h2>
@using (Html.BeginForm("Register", "Account"))
{
<div class="form-row">
    <div class="form-group col-md-6">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { placeholder = "UserName", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "ConfirmPassword", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(m => m.Mobile)
        @Html.TextBoxFor(m => m.Mobile, new { placeholder = "Mobile", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(m => m.StreetAddress)
        @Html.TextBoxFor(m => m.StreetAddress, new { placeholder = "StreetAddress", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.StreetAddress, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(m => m.City)
        @Html.TextBoxFor(m => m.City, new { placeholder = "City", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(m => m.State)
        @Html.TextBoxFor(m => m.State, new { placeholder = "State", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.State, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(m => m.PostalCode)
        @Html.TextBoxFor(m => m.PostalCode, new { placeholder = "PostalCode", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PostalCode, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-6">
        <button type="submit" class="btn btn-sm btn-success">Register</button>
    </div>
</div>
@Html.ValidationSummary();
}